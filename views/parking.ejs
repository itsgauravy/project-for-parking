<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Parking page</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>

    <%- include('../partials/header.ejs')%>
    <main>
        <section id="mid">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <h2>Parking Records</h2>
                        <a href="/recordadd"><button class="btn btn-outline-secondary form-control mt-2 mb-2"> <i class="bi bi-car-front"></i> Add New Entry <i class="bi bi-car-front"></i></button></a>
                        <table class=" table table-hover table-bordered table-striped table-dark">
                            <tr>
                                <th>S.NO.</th>
                                <th>Vechile Number</th>
                                <th>Vechile Type</th>
                                <th>Vechile In </th>
                                <th>Vechile Out </th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                            <%record.forEach((result,key)=>{%>
                                <tr>
                                    <td><%=key+1%></td>
                                    <td><%=result.vno%></td>
                                    <td><%=result.vtype%></td>
                                    <td><%=result.vin%></td>
                                    <td><%=result.vout%></td>
                                    <td><%=result.amount%></td>
                                    <%if(result.status=='OUT'){%>
                                    <td><a href="parkingupdate/<%=result.id%>"><button disabled><%=result.status%></button></a></td>
                                    <%}else{%>
                                        <td><a href="parkingupdate/<%=result.id%>"><button><%=result.status%></button></a></td>
                                        <%}%>
                                    <%if(result.status=='OUT'){%>
                                    <td><a href="/parkingprint/<%=result.id%>"><button>Print Recipt</button></a></td>
                                    <%}else{%>
                                        <td><a  href="/parkingprint/<%=result.id%>"><button disabled>Print Recipt</button></a></td>
                                     <%}%>
                                </tr>
                           <%})%>
                           
                        </table>
                    </div>
                </div>
            </div>
        </section>
    </main>
    
    <%- include('../partials/footer.ejs')%>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>